<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignUpButtonStyle" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconPadding">16dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">0.25dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="MainButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="BoldHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <!-- You can also customize other text properties here if needed -->
        <!-- <item name="android:textSize">14sp</item> -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ECommmerceFixed</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Set the corner radius -->
    </style>
</resources>